{
    "version": "1.0",
    "name": "liraui/team",
    "description": "A team management package for LiraUi.",
    "keywords": [
        "laravel",
        "liraui",
        "team"
    ],
    "license": "MIT",
    "authors": [
        {
            "name": "Ahsan Zia",
            "email": "ahsan@liraui.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.4",
        "inertiajs/inertia-laravel": "^2.0",
        "laravel/wayfinder": "^0.1.12",
        "spatie/laravel-permission": "^6.0",
        "spatie/laravel-route-attributes": "^1.25"
    },
    "require-dev": {
        "laravel/pint": "^1.0",
        "mockery/mockery": "^1.0",
        "orchestra/testbench": "^9.15",
        "pestphp/pest": "^4.1"
    },
    "autoload": {
        "psr-4": {
            "LiraUi\\Team\\": "src/",
            "LiraUi\\Team\\Database\\Seeders\\": "database/seeders/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "LiraUi\\Team\\Tests\\": "tests/",
            "App\\Models\\": "tests/App/Models/"
        }
    },
    "scripts": {
        "test": "vendor/bin/pest",
        "test-coverage": "XDEBUG_MODE=coverage vendor/bin/pest --coverage",
        "pint": "vendor/bin/pint"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "LiraUi\\Team\\TeamServiceProvider"
            ]
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
